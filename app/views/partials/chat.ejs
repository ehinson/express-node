<div class="container">
  <div class="row">
    <div class="col m4 s12">
        <h2>Form</h2>
      <form action="" class="nodex-chat-form">
        <div class="form-group">
          <label for="nodex-chat-name">Name</label>
          <input type="text" id="nodex-chat-name" class="nodex-form form-control">
        </div>

        <div class="form-group">
          <label for="nodex-chat-message">Message</label>
          <input type="text" id="nodex-chat-message" class="nodex-form form-control">
        </div>

        <button type="submit" name="button">Submit</button>

      </form>
    </div>
    <aside class="col m8 s12">
      <div class="chat content">
        <h2>Content</h2>

        <div class="chat-messages">
        </div>
      </div>
    </aside>
  </div>
</div>
